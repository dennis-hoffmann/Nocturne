<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link id="favicon" rel="icon" type="image/png" sizes="256x256" href="{{ asset('images/logo.png') }}">
        <title>{% block title %}Nocturne{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
{% block body %}
    <div class="container text-center">
        <br>
        <br>
        <br>
        <h3 style="color: #dc3545;">Moon runes to Romaji</h3>
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3">
                <form method="post" class="form-control">
                    <input name="text" class="form-control" style="background-color: white;" type="text" value="{{ text }}">
                </form>

                {% if romaji %}
                    <p class="text-center" style="color: #dc3545; font-size: 1.2em;">{{ romaji }}</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</html>